<main class="search">
  <section id="search">
    <h2>Search by Name</h2>

    <form class="search-wrapper cf" method="get" action="/stones/search">
      <input
        id="#search-input"
        type="text"
        name="search"
        value="{{search}}"
        placeholder="Search here..."
      />
      <button type="submit">Search</button>
    </form>

    <div id="search-container">
        {{#if stones}}
            <ul class="card-wrapper">
                {{#each stones}}
                    {{> stoneDashboardCard}}
                {{/each}}
            </ul>
        {{else}}
            <div id="no-post">
                <h2>There are no results found.</h2>
             </div>
        {{/if}}
    </div>
  </section>
</main>